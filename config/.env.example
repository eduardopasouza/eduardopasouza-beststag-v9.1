# BestStag v9.1 + Abacus.AI - Configuração de Ambiente
# Copie este arquivo para .env e preencha com suas credenciais

# === ABACUS.AI ===
ABACUS_API_KEY=your_abacus_api_key_here
ABACUS_BASE_URL=https://api.abacus.ai/v1

# === TWILIO (WhatsApp) ===
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# === AIRTABLE ===
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# === REDIS (Cache) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === N8N ===
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# === CONFIGURAÇÕES GERAIS ===
ENVIRONMENT=development
LOG_LEVEL=INFO
CACHE_TTL=300
MAX_RETRIES=3

# === CONFIGURAÇÕES DE IA ===
DEFAULT_MODEL=chatglm
FALLBACK_MODEL=gpt-4
MAX_TOKENS=1000
TEMPERATURE=0.7

# === CONFIGURAÇÕES DE SEGURANÇA ===
API_RATE_LIMIT=100
SESSION_SECRET=your_session_secret_here
CORS_ORIGINS=http://localhost:3000,http://localhost:5678

