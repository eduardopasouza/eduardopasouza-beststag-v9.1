# Configurações Principais - BestStag v9.0
# Arquivo de variáveis de ambiente
# IMPORTANTE: Copie este arquivo para .env e preencha com suas credenciais reais

# ===== INFORMAÇÕES GERAIS =====
PROJECT_NAME=BestStag
VERSION=9.0
ENVIRONMENT=production
DEBUG=false

# ===== N8N CLOUD =====
N8N_WEBHOOK_URL=https://beststag25.app.n8n.cloud/webhook
N8N_API_KEY=your_n8n_api_key_here
N8N_WORKSPACE_ID=your_n8n_workspace_id

# ===== AIRTABLE =====
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_WORKSPACE_ID=your_airtable_workspace_id

# Tabelas Airtable
AIRTABLE_TABLE_USUARIOS=Usuarios
AIRTABLE_TABLE_EMAILS=Emails
AIRTABLE_TABLE_EVENTOS=Eventos
AIRTABLE_TABLE_TAREFAS=Tarefas
AIRTABLE_TABLE_INTERACOES=Interacoes
AIRTABLE_TABLE_CONFIGURACOES=Configuracoes

# ===== TWILIO (WHATSAPP) =====
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_URL=https://beststag25.app.n8n.cloud/webhook/whatsapp

# ===== OPENAI =====
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===== CLAUDE (ANTHROPIC) =====
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000

# ===== GOOGLE APIS =====
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback
GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key
GMAIL_API_KEY=your_gmail_api_key

# ===== SUPABASE (OPCIONAL) =====
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===== PORTAL WEB =====
FRONTEND_URL=https://portal.beststag.com
API_BASE_URL=https://api.beststag.com
WEBSOCKET_URL=wss://ws.beststag.com

# ===== AUTENTICAÇÃO =====
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=7d

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WHATSAPP_MAX=50

# ===== MONITORING =====
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
METRICS_ENABLED=true

# ===== EMAIL (RESEND) =====
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@beststag.com
SUPPORT_EMAIL=support@beststag.com

# ===== REDIS (CACHE) =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ===== WEBHOOK SECURITY =====
WEBHOOK_SECRET=your_webhook_secret_for_hmac_validation
TWILIO_WEBHOOK_SECRET=your_twilio_webhook_secret

# ===== BACKUP =====
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ===== FEATURES FLAGS =====
FEATURE_MEMORY_CONTEXTUAL=true
FEATURE_MULTI_MODEL_AI=true
FEATURE_ANALYTICS=true
FEATURE_AUTOMATIONS=true
FEATURE_PORTAL_WEB=true

# ===== LIMITES =====
MAX_USERS_FREE_TIER=1000
MAX_TASKS_PER_USER=500
MAX_EVENTS_PER_USER=200
MAX_INTERACTIONS_STORED=10000

# ===== NOTIFICAÇÕES =====
SLACK_WEBHOOK_URL=your_slack_webhook_for_alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_for_alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===== ANALYTICS =====
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key

# ===== DEPLOYMENT =====
DEPLOY_ENVIRONMENT=production
DEPLOY_REGION=us-east-1
CDN_URL=https://cdn.beststag.com
STATIC_FILES_URL=https://static.beststag.com

# ===== SEGURANÇA =====
CORS_ORIGINS=https://portal.beststag.com,https://app.beststag.com
ALLOWED_HOSTS=beststag.com,*.beststag.com
SSL_ENABLED=true
HSTS_ENABLED=true

# ===== PERFORMANCE =====
CACHE_TTL=3600
API_TIMEOUT=30000
WEBHOOK_TIMEOUT=10000
DB_CONNECTION_POOL_SIZE=10

# ===== DESENVOLVIMENTO =====
DEV_MODE=false
HOT_RELOAD=false
SOURCE_MAPS=false
MINIFY_ASSETS=true

